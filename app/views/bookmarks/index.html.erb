<h1 class="custom-header">
    Your Bookmarks
</h1>

<hr>

<div>
  <p>
    Click "Show Details" to see edit the comment or delete the bookmark.
  </p>
  <div class="table-responsive">
    <table class="table table-bordered table-striped table-hover">
      <tr>
        <th>
          ID
        </th>

        <th>
          Paper Title
        </th>

        <th>
          Comment
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_bookmarks.each do |a_bookmark| %>
      <tr>
        <td>
          <%= a_bookmark.id %>
        </td>

        <td>
          <%= a_bookmark.paper.title %>
        </td>

        <td>
          <%= a_bookmark.comment %>
        </td>

        <td>
          <%= time_ago_in_words(a_bookmark.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_bookmark.updated_at) %> ago
        </td>

        <td>
          <a href="/bookmarks/<%= a_bookmark.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
