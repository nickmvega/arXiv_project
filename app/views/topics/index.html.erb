<div>
  <div>
    <h1 class="custom-header">
      Your arXiv Topics
    </h1>
  </div>
</div>

<hr>

<div>
  <div class="card shadow mb-4">
    <h2 class="custom-header">
      Add a new topic
    </h2>

    <form action="/insert_topic" method="post">
      <div>
        <label for="topic_box">
          Topic
        </label>

        <input type="text" id="topic_box" name="query_topic">
      </div>

      <div class="row mb-3">
        <div class="col-sm-10">
          <button type="submit" class="btn btn-primary">Create Topic</button>
        </div>
      </div>
    </form>
  </div>
</div>

<hr>

<p>
  Click "Show Details" to see which papers are associated with a specific topic.
</p>

<div>
  <div class="table-responsive">
    <table class="table table-bordered table-striped table-hover">
      <tr>
        <th>
          ID
        </th>

        <th>
          Topic
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_topics.each do |a_topic| %>
      <tr>
        <td>
          <%= a_topic.id %>
        </td>

        <td>
          <%= a_topic.topic %>
        </td>

        <td>
          <%= time_ago_in_words(a_topic.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_topic.updated_at) %> ago
        </td>

        <td>
          <a href="/topics/<%= a_topic.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
