<div>
  <div>
    <h1>
      <%= @the_topic.topic %>
    </h1>

    <div>
      <div>
        <a href="/topics">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_topic/<%= @the_topic.id %>">
          Delete topic
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Topic
      </dt>
      <dd>
        <%= @the_topic.topic %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_topic.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_topic.updated_at) %> ago
      </dd>
    </dl>

    <p>Associated Papers:</p>

    <% if @associated_papers.any? %>
      <ul>
        <% @associated_papers.each do |paper| %>
          <li>
            <%= link_to paper.title, paper_path(paper) %> by <%= paper.author %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p>No papers are associated with this topic.</p>
    <% end %>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Edit topic
    </h2>

    <form action="/modify_topic/<%= @the_topic.id %>"  method="post" >
      <div>
        <label for="topic_box">
          Topic
        </label>

        <input type="text" id="topic_box" name="query_topic" value="<%= @the_topic.topic %>">
      </div>

      <button>
        Update topic
      </button>
    </form>
  </div>
</div>

<hr>
